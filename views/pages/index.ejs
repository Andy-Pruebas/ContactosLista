<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body class="container">

<header>
    <% include ../partials/header %>

</header>

<main>
    <div class="ui grid container">
        <div class="ui three column centered grid">
            <% contactos.forEach(function(contacto, index) { %>

                    <div class="column">
                    <div class="ui card">
                        <div class="image">
                            <img src="<%= contacto.image %>" style="max-height: 150px">
                        </div>
                        <div class="content">
                            <i class="male icon"></i><a class="header" href="/account/<%= contacto.image_id %>"><%= contacto.nombre%></a>
                            <div>
                                <i class="calendar icon"></i> <%= contacto.fecha %>
                            </div>
                        </div>
                        <div class="extra content">
                            <form action="/destroy" method="post" style="display: inline" id="destroy_form<%= index %>">
                                <input type="hidden" name="image_id" value="<%= contacto.image_id %>">
                                <a onclick="document.getElementById('destroy_form<%= index %>').submit(); return false;">
                                    <i class="remove icon"></i> Eliminar
                                </a>
                            </form>
                            <a href="/edit/<%= contacto.image_id %>">
                                <i class="edit icon"></i> Editar
                            </a>
                        </div>
                    </div>
                </div>

            <% }); %>
        </div>
    </div>

<% include ../partials/scripts %>
</body>
</html>
